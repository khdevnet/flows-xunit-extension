<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<LangVersion>preview</LangVersion>
		<IsPackable>false</IsPackable>
		<MSBuildWarningsAsErrors>CS8785</MSBuildWarningsAsErrors>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
		<PackageReference Include="xunit" Version="2.4.1" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="coverlet.collector" Version="3.1.0">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Xunit.Scenario.CodeGenerator\Xunit.Scenario.CodeGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	  <ProjectReference Include="..\Xunit.Scenario\Xunit.Scenario.csproj" />
	  <!--<ProjectReference Include="..\Xunit.Scenario.CodeGenerator\Xunit.Scenario.CodeGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" /> -->
	</ItemGroup>

	<ItemGroup>
		<Compile Update="ScenarioAutoGeneration\RequestFlowAutoGeneratedScenario.cs">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Compile>
	</ItemGroup>

</Project>
